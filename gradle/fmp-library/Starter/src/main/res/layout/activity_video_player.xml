<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llPanel"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="0dp">

        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ToggleButton
                android:id="@+id/ibPlay"
                android:textOff=""
                android:textOn=""
                android:layout_centerInParent="true"
                android:background="@drawable/btn_onoff"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ToggleButton
                android:id="@+id/ibChannels"
                android:textOff=""
                android:textOn=""
                android:layout_centerInParent="true"
                android:background="@drawable/btn_ms"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ToggleButton
                android:id="@+id/ibTitre"
                android:textOff=""
                android:textOn=""
                android:layout_centerInParent="true"
                android:background="@drawable/btn_titre"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </RelativeLayout>


    </LinearLayout>

    <SurfaceView
        android:id="@+id/surfaceview"
        android:layout_above="@id/llPanel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="35dp">
        <TextView
            android:id="@+id/tvName"
            android:gravity="center_horizontal|center_vertical"
            android:layout_centerInParent="true"
            android:textColor="#FFFFFFFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</RelativeLayout>
